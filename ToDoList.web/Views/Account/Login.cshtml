
@model LoginUserViewModel
@{
    ViewData["Title"] = "Login";
}

<div id="login-form" class="d-flex align-items-center vh-100">
    <div class="container">
        <div class="row">
            <div class="col-md-8 offset-md-2 col-lg-6 offset-lg-3 align-self-center my-3">
                <form asp-area="" asp-controller="Account" asp-action="Login" method="post" class="bg-white rounded pb_form_v1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <h2 class="mb-5 mt-0 text-center">Login</h2>
                    <div class="form-group">
                        <input asp-for="Email" type="email" class="form-control py-3 reverse" placeholder="Email">
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-5">
                        <input asp-for="Password" type="password" class="form-control py-3 reverse" placeholder="Password">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <h3 class="mb-3 mt-0 text-center">or login as Demo user</h3>

                    <div class="form-group mb-3">
                        <select asp-for="DemoUser" class="form-control">
                            <option value="" selected>Choose...</option>
                            <option value="admin">Admin</option>
                            <option value="user">User</option>
                            <option value="client">Client</option>
                        </select>
                    </div>

                    <div class="form-group mb-5">
                        <input asp-for="RememberMe" type="checkbox" name="rememberMe">
                        <label for="rememberMe">Remember me?</label>
                    </div>

                    <div class="form-group">
                        <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill btn-shadow-blue" value="Login">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

