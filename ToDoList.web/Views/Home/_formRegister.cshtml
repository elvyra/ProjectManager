
@model RegisterUserViewModel

    <form method="post" asp-area="" asp-controller="Account" asp-action="Register" class="bg-white rounded pb_form_v1">
        <h2 class="mb-4 mt-0 text-center">Sign Up as Client</h2>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <input asp-for="Email" class="form-control py-3 reverse" placeholder="Email">
        </div>
        <span asp-validation-for="Email" class="text-danger"></span>
        <div class="form-group">
            <input asp-for="Password" class="form-control py-3 reverse" placeholder="Password">
        </div>
        <span asp-validation-for="Password" class="text-danger"></span>
        <div class="form-group">
            <input asp-for="ConfirmPassword" class="form-control py-3 reverse" placeholder="Confirm Password">
        </div>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

        <div class="form-group mt-5">
            <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" value="Register">
        </div>
    </form>